<?xml version="1.0" encoding="UTF-8" ?>

<config>

	<module name='http' required='yes' />
	<module name='network' required='yes' />
	
	<!-- Só monitora serviços se a VPN estiver ativa -->
	<network-interface name='vpn' interface-name='tunsnx' update-timer='5'>

		<state name='undefined' level='error' summary='VPN link state is undefined' forward-to-children='yes' />
		<state name='offline' level='ready' summary='VPN is offline' forward-to-children='yes' />
		<state name='online' level='ready' summary='VPN is online' />
		<state name='not-found' level='unimportant' summary='VPN is not available' forward-to-children='yes' />

		<remote-host url='http://10.24.80.1/mentor/api/json/global'>
		</remote-host>

	</network-interface>
		
</config>


