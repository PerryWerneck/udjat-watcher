#include	<windows.h>
#include	"resources.h"

#pragma	code_page(65001)		//	UTF-8

LANGUAGE LANG_NEUTRAL, SUBLANG_NEUTRAL

CREATEPROCESS_MANIFEST_RESOURCE_ID		RT_MANIFEST	"app-manifest.xml"

IDI_DEFAULT								ICON	default.ico
IDI_BALLOON								ICON	balloon.ico
IDI_DISABLED							ICON	disabled.ico

IDI_STATE_BEGIN+ID_STATE_UNDEFINED		ICON	undefined.ico
IDI_STATE_BEGIN+ID_STATE_UNIMPORTANT	ICON	unimportant.ico
IDI_STATE_BEGIN+ID_STATE_READY			ICON	ready.ico
IDI_STATE_BEGIN+ID_STATE_WARNING		ICON	warning.ico
IDI_STATE_BEGIN+ID_STATE_ERROR			ICON	error.ico
IDI_STATE_BEGIN+ID_STATE_CRITICAL		ICON	critical.ico

VS_VERSION_INFO	VERSIONINFO
FILEVERSION		@WIN32_FILEVERSION@
PRODUCTVERSION	@PACKAGE_MAJOR_VERSION@,@PACKAGE_MINOR_VERSION@,@PACKAGE_MAJOR_RELEASE@,@PACKAGE_MINOR_RELEASE@

BEGIN

	//	https://learn.microsoft.com/en-us/windows/win32/menurc/stringfileinfo-block
	//	https://stackoverflow.com/questions/14221918/win32-resource-file-multiple-translations
	BLOCK "StringFileInfo"
	BEGIN
	
		// English
		BLOCK "080904B0"
		BEGIN
			VALUE "FileDescription",	"Server monitoring\0"
			VALUE "FileVersion",		"@WIN32_VERSION@\0"
			VALUE "LegalCopyright",		"GNU GPLv3\0"
			VALUE "InternalName",		"@PACKAGE_NAME@\0"
			VALUE "OriginalFilename",	"@PACKAGE_NAME@.exe\0"
			VALUE "ProductName",		"@PRODUCT_NAME@\0"
			VALUE "ProductVersion",		"@PACKAGE_MAJOR_VERSION@,@PACKAGE_MINOR_VERSION@,@PACKAGE_MAJOR_RELEASE@,@PACKAGE_MINOR_RELEASE@\0"
		END
		
		// Brazilian Portuguese
		BLOCK "041604B0"
		BEGIN
			VALUE "FileDescription",	"Monitoração de servidores\0"
			VALUE "FileVersion",		"@WIN32_VERSION@\0"
			VALUE "LegalCopyright",		"GNU GPLv3\0"
			VALUE "InternalName",		"@PACKAGE_NAME@\0"
			VALUE "OriginalFilename",	"@PACKAGE_NAME@.exe\0"
			VALUE "ProductName",		"@PRODUCT_NAME@\0"
			VALUE "ProductVersion",		"@PACKAGE_MAJOR_VERSION@,@PACKAGE_MINOR_VERSION@,@PACKAGE_MAJOR_RELEASE@,@PACKAGE_MINOR_RELEASE@\0"
		END

	END

	//	https://learn.microsoft.com/en-us/windows/win32/menurc/varfileinfo-block
	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x0809, 0x04B0, 0x0416, 0x04B0
	END

END

